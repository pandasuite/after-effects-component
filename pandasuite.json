{
  "version": "3.0.0",
  "main": "",

  "system": {
    "autoSave": false,
    "htmlBehavior": false,
    "actions": [
      {
        "id": "toMarker",
        "name": "Change frame",
        "locale_name": {
          "fr_FR": "Changer frame"
        }
      }
    ],
    "events": [
      {
        "id": "triggerMarker",
        "name": "Frame",
        "locale_name": {
          "fr_FR": "Frame"
        }
      }
    ],
    "controls": [
      {
        "id": "setSnapshotData",
        "name": "Add Frame",
        "locale_name": {
          "fr_FR": "Ajouter Frame"
        }
      }
    ],
    "defaults": {
      "markers": {
        "description": {
          "value": "%s",
          "args": [
            {
              "key": "id"
            }
          ]
        }
      }
    }
  },

  "controls": [
    {
      "id": "controlBar",
      "name": "Animation playback (frames)",
      "locale_name": {
        "fr_FR": "Lecture de l'animation (frames)"
      },
      "type": "Player",
      "value": {
        "minSeek": 0,
        "maxSeek": -1,
        "currentSeek": 0
      },
      "listeners": {
        "playPause": {
          "action_id": "playPause"
        },
        "stop": {
          "action_id": "stop",
          "event_id": "onStoppingPlay"
        },
        "seek": {
          "action_id": "seek",
          "action_params": {
            "frame": {
              "param_id": "frame"
            }
          }
        }
      }
    }
  ],

  "events": [
    {
      "id": "onStartingPlay",
      "name": "Starting play",
      "locale_name": {
        "fr_FR": "Commence lecture"
      }
    },
    {
      "id": "onPausePlaying",
      "name": "Pause playing",
      "locale_name": {
        "fr_FR": "Mise en pause"
      }
    },
    {
      "id": "onStoppingPlay",
      "name": "Stopping play",
      "locale_name": {
        "fr_FR": "Arrêt lecture"
      }
    },
    {
      "id": "onFinishPlaying",
      "name": "Finish playing",
      "locale_name": {
        "fr_FR": "Fin lecture"
      }
    }
  ],

  "actions": [
    {
      "id": "playPause",
      "name": "Play/Pause",
      "locale_name": {
        "fr_FR": "Lecture/Pause"
      }
    },
    {
      "id": "play",
      "name": "Play",
      "locale_name": {
        "fr_FR": "Lecture"
      }
    },
    {
      "id": "pause",
      "name": "Pause",
      "locale_name": {
        "fr_FR": "Mettre en pause"
      }
    },
    {
      "id": "stop",
      "name": "Stop",
      "locale_name": {
        "fr_FR": "Arrêter"
      }
    },
    {
      "id": "seek",
      "name": "Seek",
      "locale_name": {
        "fr_FR": "Seek"
      },
      "params": [
        { "id": "frame", "name": "Frame", "locale_name": {"fr_FR": "Frame"}, "type": "Integer", "value": 0 }
      ]
    },
    {
      "id": "forward",
      "name": "Forward",
      "locale_name": {
        "fr_FR": "Avancer"
      },
      "params": [
        { "id": "frame", "name": "Frame", "locale_name": {"fr_FR": "Frame"}, "type": "Integer", "value": 1 }
      ]
    },
    {
      "id": "rewind",
      "name": "Rewind",
      "locale_name": {
        "fr_FR": "Reculer"
      },
      "params": [
        { "id": "frame", "name": "Frame", "locale_name": {"fr_FR": "Frame"}, "type": "Integer", "value": 1 }
      ]
    },
    {
      "id": "restartFromBeginning",
      "name": "Restart from beginning",
      "locale_name": {
        "fr_FR": "Redémarrer au début"
      }
    },
    {
      "id": "setSpeed",
      "name": "Set speed",
      "locale_name": {
        "fr_FR": "Mettre la vitesse"
      },
      "params": [
        { "id": "speed", "name": "Speed", "locale_name": {"fr_FR": "Vitesse"}, "type": "Float", "value": 1 }
      ]
    },
    {
      "id": "increaseSpeed",
      "name": "Increase speed",
      "locale_name": {
        "fr_FR": "Augmenter la vitesse"
      },
      "params": [
        { "id": "speed", "name": "Speed", "locale_name": {"fr_FR": "Vitesse"}, "type": "Float", "value": 1 }
      ]
    },
    {
      "id": "decreaseSpeed",
      "name": "Decrease speed",
      "locale_name": {
        "fr_FR": "Diminuer la vitesse"
      },
      "params": [
        { "id": "speed", "name": "Speed", "locale_name": {"fr_FR": "Vitesse"}, "type": "Float", "value": 1 }
      ]
    }
  ],

  "properties": [
    {
      "id": "animationPath",
      "name": "File name",
      "locale_name": {
        "fr_FR": "Nom du fichier"
      },
      "type": "String",
      "value": "data.json"
    },
    {
      "id": "loop",
      "name": "Loop mode",
      "locale_name": {
        "fr_FR": "En boucle"
      },
      "type": "Integer",
      "value": -1
    },
    {
      "id": "autoPlay",
      "name": "Autoplay",
      "locale_name": {
        "fr_FR": "Lecture automatique"
      },
      "type": "Boolean",
      "value": true
    },
    {
      "id": "speed",
      "name": "Speed",
      "locale_name": {
        "fr_FR": "Vitesse"
      },
      "type": "Float",
      "value": 1
    },
    {
      "id": "minSpeed",
      "name": "Min",
      "locale_name": {
        "fr_FR": "Vitesse minimum"
      },
      "type": "Float",
      "value": 0
    },
    {
      "id": "maxSpeed",
      "name": "Max",
      "locale_name": {
        "fr_FR": "Vitesse maximum"
      },
      "type": "Float",
      "value": 10
    },
    {
      "id": "useNativeIOS",
      "name": "Native iOS",
      "locale_name": {
        "fr_FR": "iOS natif"
      },
      "type": "Boolean",
      "value": false
    },
    {
      "id": "useNativeAndroid",
      "name": "Native Android",
      "locale_name": {
        "fr_FR": "Android natif"
      },
      "type": "Boolean",
      "value": false
    }
  ],

  "synchronization": [
    {
      "id": "frame",
      "name": "Synchronize frame values",
      "locale_name": {
        "fr_FR": "Synchroniser les frames"
      }
    },
    {
      "id": "speed",
      "name": "Synchronize speed",
      "locale_name": {
        "fr_FR": "Synchroniser le temps"
      }
    }
  ],

  "resources": [
    {
      "id": "animationFolder",
      "type": "Zip",
      "required": true
    }
  ]

}
